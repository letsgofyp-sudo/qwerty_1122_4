{
  "version": 2,
  "builds": [
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "backend/wsgi.py" }
  ],
  "crons": [
    {
      "path": "/internal/cron/pre-ride-reminders/",
      "schedule": "*/1 * * * *"
    }
  ]
}