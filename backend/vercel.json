{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
  "builds": [
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    }
  ],
  "routes": [
  { "src": "/static/(.*)", "dest": "/staticfiles/$1" },
  { "src": "/(.*)", "dest": "backend/wsgi.py" }
]
}
